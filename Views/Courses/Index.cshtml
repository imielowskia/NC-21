@model IEnumerable<NC_21.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="bg-primary">
            <td>
                @Html.DisplayFor(modelItem => item.Nazwa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Delete</a>
            </td>
        </tr>
        @foreach(var f in item.Fields)
                {
                    <tr class="bg-info">
                        <td colspan="2">@f.Nazwa </td>
                    </tr>
                    @foreach(var g in f.Groups)
                    {
                        <tr>
                        <td>@g.Nazwa </td>
                        <td>
                            @foreach(var s in g.Students)
                        {
                            @s.I_N <br />
                        }
                        </td>
                        </tr>
                    }
                }
}
    </tbody>
</table>
